<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.HBox?>
<?import javafx.stage.Stage?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.image.ImageView?>
<fx:root resizable="false" title="Import" type="javafx.stage.Stage" xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1">
  <icons>
    <Image url="@/images/help_icon.png" />
  </icons>
  <scene>
    <Scene>
      <stylesheets>
        <URL value="@ImportWindow.css" />
      </stylesheets>
      <VBox alignment="CENTER" fx:id="helpMessageContainer" style="-fx-background-color: #EFEEFC;" spacing="10">
        <VBox minHeight="32.0" minWidth="400.0">
          <Label fx:id="helpHeader" styleClass="heading_label" text="Import"/>
        </VBox>

        <VBox fx:id="importContainer" styleClass="submitButton" minHeight="40" minWidth= "200">
          <Label text="sadas"/>
        </VBox>
        <VBox >
          <Button fx:id="importButton" mnemonicParsing="false" minHeight="150.0" minWidth="400.0" contentDisplay="TOP" text="Click or Drag and Drop">
            <graphic>
              <ImageView fx:id="importImage" fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true"/>
            </graphic>
            <Label fx:id="importMessage" styleClass="heading_label" text="Import"/>
          </Button>
        </VBox>

        <children>
          <HBox alignment="TOP_RIGHT" minHeight="32.0" minWidth="400.0" spacing="10">
            <Button fx:id="cancelButton" mnemonicParsing="false" text="Cancel">
              <VBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="5.0" />
              </VBox.margin>
            </Button>
            <Button fx:id="submitButton" mnemonicParsing="false" text="Import">
              <VBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="5.0" />
              </VBox.margin>
            </Button>
          </HBox>
        </children>
        
        <opaqueInsets>
          <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </opaqueInsets>
        <padding>
          <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </padding>
      </VBox>
    </Scene>
  </scene>
</fx:root>
