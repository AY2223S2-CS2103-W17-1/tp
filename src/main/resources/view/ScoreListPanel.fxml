<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.chart.CategoryAxis?>


<TabPane style="-fx-background-color: white; -fx-background-radius: 10;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <Tab fx:id="tab1" closable="false" styleClass="list_tab" text="Text">
        <VBox>
        <Label fx:id="title" styleClass="title_label" text="Score List" />
        <Label fx:id="name" styleClass="heading_label" />
        <ListView fx:id="scoreListView" style="-fx-padding: 10 18 18 18" VBox.vgrow="ALWAYS" />
        </VBox>
    </Tab>
    <Tab fx:id="tab2" closable="false" styleClass="list_tab" text="Chart">
        <VBox>
            <Label fx:id="chart" styleClass="title_label" text="Score Chart" />
            <Label fx:id="nameChart" styleClass="heading_label" />
            <LineChart fx:id="scoreChart" prefWidth="500" prefHeight="200" visible="false">
                <xAxis>
                    <CategoryAxis side="BOTTOM" fx:id="xAxis" />
                </xAxis>
                <yAxis>
                    <NumberAxis fx:id="yAxis" autoRanging="false" lowerBound="0" upperBound="100" tickUnit="20" />
                </yAxis>
            </LineChart>
            <TableView fx:id="scoreStatistic" prefHeight="75" prefWidth="500.0">
                <columns>
                    <TableColumn fx:id="maxScore" text="Max Score">
                    </TableColumn>
                    <TableColumn fx:id="minScore" text="Min Score">
                    </TableColumn>
                    <TableColumn fx:id="average" text="Average">
                    </TableColumn>
                    <TableColumn fx:id="percentage" text="Percentage %">
                    </TableColumn>
                </columns>
            <columnResizePolicy>
               <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
            </TableView>
        </VBox>
    </Tab>
</TabPane>
