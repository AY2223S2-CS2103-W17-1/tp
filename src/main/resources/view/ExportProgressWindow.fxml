<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.HBox?>
<?import javafx.stage.Stage?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<fx:root resizable="false" title="Export Student's Progress" type="javafx.stage.Stage" xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1">
  <icons>
    <Image url="@/images/report_icon.png" />
  </icons>
  <scene>
    <Scene>
      <stylesheets>
        <URL value="@ExportProgressWindow.css" />
      </stylesheets>
      <VBox alignment="CENTER" fx:id="exportMessageContainer">
        <children>
          <TextArea fx:id="resultDisplay" editable="false" styleClass="result-display" wrapText="true" prefWidth="500" prefHeight="100">
            <VBox.margin>
              <Insets bottom="5.0" left="10.0" right="10.0" top="10.0" />
            </VBox.margin>
          </TextArea>
          <Button fx:id="saveAsButton" mnemonicParsing="false" onAction="#saveAs" text="Save As">
            <VBox.margin>
              <Insets bottom="10.0" left="10.0" right="10.0" top="5.0" />
            </VBox.margin>
          </Button>
        </children>
        <opaqueInsets>
          <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </opaqueInsets>
        <padding>
          <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </padding>
      </VBox>
    </Scene>
  </scene>
</fx:root>
